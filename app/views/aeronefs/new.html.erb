<div class="banner-show banner-new-ad" style="height: 200px; font-weight: bold; font-size: 40px;">
<p>Entrez un nouvel aéronef</p>
</div>
  <div class="container padded">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="wrapper-registration well">
          <%= simple_form_for(@aeronef) do |f| %>
          <div class="form-group">
          <%= f.input :nom, label: false, placeholder: "Ex: Vol au dessus des calanques en paramoteur", label: "Titre de l'annonce", :input_html => { class: 'hide-profile-field'}, wrapper: :horizontal_form %>

            <%= f.select :type, ['Multiaxe', 'Paramoteur', 'Pendulaire', 'Autogire', 'Planeur', 'parapente'], {} ,class: "form-control", label: "Type d'appareil" %>
          </div>
          <%= f.input :cylindre, label: false, placeholder: "Cylindré", label: 'Cylindré'  %>
          <%= f.input :equipement, label: 'Equipement', placeholder: "Décrivez votre appareil ainsi que les équipements. Ajouter les petits plus qui personnalise votre aéronef. ",:input_html => {:rows => 10}, label: 'Equipement' %>
          <%= f.input :photo, label: false, label: "Photo de votre appareil" %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :annee, label: false, label: "Année de construction" %>
          <%= f.input :vitesse, label: false, label: "Vitesse de pointe",placeholder: 'Ex: 250 km/h'  %>
          <%= f.input :autonomie, label: false, label: "Autonomie", placeholder: 'Ex: 2h30'  %>
          <%= f.button :submit, value: "Ajouter cet appareil" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
