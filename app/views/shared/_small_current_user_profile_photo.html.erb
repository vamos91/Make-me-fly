

<% if @ad.user.picture? %>
  <%= cl_image_tag @ad.user.picture, class: "avatar-xxl" %>
  <% elsif @ad.user.facebook_picture_url? %>
    <%= image_tag @ad.user.facebook_picture_url.split("=")[0] << "=large", class: "avatar" %>
  <% else %>
    <%= image_tag "pilot.png", class: "avatar" %>
<% end %>
