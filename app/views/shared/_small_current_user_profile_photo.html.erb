<% if current_user.picture? %>
  <%= cl_image_tag current_user.picture, class: "avatar" %>
  <% elsif current_user.facebook_picture_url? %>
    <%= image_tag current_user.facebook_picture_url.split("=")[0] << "=large", class: "avatar" %>
  <% else %>
    <%= image_tag "pilot.png", class: "avatar" %>
<% end %>
