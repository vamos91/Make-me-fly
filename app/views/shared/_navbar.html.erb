<div class="navbar-wagon navbar-wagon-fixed">
  <!-- Logo -->
  <div class="container">
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
<!--     <span><%= image_tag "favicon.png" %></span>
 -->      <span>MakeMeFly</span>
    </div>
  <% end %>



  <form action="<%= search_ads_path %>" class="navbar-wagon-search vertical-center" id="form-navbar">
    <input name="q" type="text" class="navbar-wagon-search-input" placeholder="Ex: Marseille">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
  </form>






  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs">

     <!-- <%= link_to "Qu'est ce qu'un ULM ?", pages_ulm_path, :class => "navbar-wagon-item navbar-wagon-button btn" %> -->
<!--      <%= link_to "Contact", '#', anchor: "footer", :class => "navbar-wagon-item navbar-wagon-button btn" %>
 -->
     <!-- <%= link_to "Voir tous les pilotes", users_path, :class => "navbar-wagon-item navbar-wagon-button btn" %> -->
    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>
    <%= link_to user_path(current_user) do %>
    <% if current_user.picture? %>
        <%= cl_image_tag current_user.picture, class: "avatar-large" %>
        <% elsif current_user.facebook_picture_url? %>
          <%=  image_tag current_user.facebook_picture_url, class: "avatar-large"%>
          <% else %>
          <% image_tag "pilot.png", class: "avatar-large" %>
      <% end %>
    <% end %>
    <!-- <span style="color: white;"><%=  current_user.first_name || current_user.name.capitalize %></span> -->
    <%= link_to pages_dashboard_path, :class => "navbar-wagon-item navbar-wagon-button btn"  do %>
      <i class="fa fa-tachometer" aria-hidden="true"></i> Tableau de bord
    <% end %>
    <%= link_to users_path, :class => "navbar-wagon-item navbar-wagon-button btn"  do %>
      <i class="fa fa-users"></i> Les pilotes
    <% end %>
    <%= link_to ads_ads_path, :class => "navbar-wagon-item navbar-wagon-button btn"  do %>
      <i class="fa fa-paper-plane"></i> Les vols
    <% end %>
    <%= link_to conversations_path, class: "navbar-wagon-item navbar-wagon-button btn" do %>
              <i class="fa fa-envelope-o"></i> Conversations

          <% end %>
    <%= link_to destroy_user_session_path, :class => "navbar-wagon-item navbar-wagon-button btn", method: :delete do %>
      <i class="fa fa-sign-out"></i>
    <% end %>

<!-- Notification -->
    <% else %>
    <!-- Button (call-to-action) -->
    <%= link_to t(".top_call_to_action", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
      <!-- Login text link -->

 <!--    <button type="button" class="navbar-wagon-item navbar-wagon-button btn" data-toggle="modal" data-target="#myModal">Je commence</button>

    <%= link_to "login", "#login" , 'data-toggle' => "modal", class: "navbar-wagon-item navbar-wagon-button btn" %>

    <%= link_to 'register', new_user_registration_path, 'data-toggle' => "modal", 'data-target' => "#myModal" %> -->

    <%= link_to t(".top_call_to_action", default: "Inscription"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
    <% end %>
  </div>
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Accueil", root_path, class: "navbar-wagon-item navbar-wagon-button btn" %></li>
          <% if user_signed_in?%>
           <li><%= link_to "Mon profile", user_path(current_user), class: "navbar-wagon-item navbar-wagon-button btn" %></li>
           <li><%= link_to "Tableau de bord", pages_dashboard_path, :class => "navbar-wagon-item navbar-wagon-button btn" %></li>
           <li><%= link_to "Les pilotes", users_path, :class => "navbar-wagon-item navbar-wagon-button btn" %></li>
           <li><%= link_to "Tous les vols", ads_ads_path, class: "navbar-wagon-item navbar-wagon-button btn" %></li>
           <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-button btn" %></li>
          <% else %>
          <li><%= link_to "Connexion", new_user_session_path, class: "navbar-wagon-item navbar-wagon-button btn" %></li>
          <li><%= link_to t(".top_call_to_action", default: "Inscription"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-button btn" %></li>
          <% end %>
      </ul>
    </div>
  </div>
</div>

