<% if current_page?(root_path) %>
<div class="navbar-wagon-root navbar-wagon-fixed">
<% else %>
<div class="navbar-wagon navbar-wagon-fixed">
<% end %>


  <!-- Logo -->
  <div class="container">
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
<!--     <span><%= image_tag "plane-icon.png", class: "" %></span>
 -->      <span>MakeMeFly</span>
    </div>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs">
  <%= link_to search_ads_path, :class => "navbar-wagon-item navbar-wagon-button btn"  do %>
        <i class="fa fa-paper-plane"></i> Tous les vols
      <% end %>
      <%= link_to users_path, :class => "navbar-wagon-item navbar-wagon-button btn"  do %>
        <i class="fa fa-users"></i> Les pilotes
      <% end %>
    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>
      <%= link_to conversations_path, :class => "navbar-wagon-item navbar-wagon-button btn"  do %>
        <i class="fa fa-comments"></i> Mes messages <span class="badge badge-blue"><%= @messages.count %></span>
      <% end %>
    <%= link_to pages_dashboard_path, :class => "navbar-wagon-item navbar-wagon-button btn"  do %>
      <i class="fa fa-tachometer" aria-hidden="true"></i> Tableau de bord
    <% end %>
       <%= link_to user_path(current_user) do %>
    <% if current_user.picture? %>
        <%= cl_image_tag current_user.picture, class: "avatar-large" %>
        <% elsif current_user.facebook_picture_url? %>
          <%=  image_tag current_user.facebook_picture_url, class: "avatar-large"%>
          <% else %>
          <% image_tag "pilot.png", class: "avatar-large" %>
      <% end %>
    <% end %>
    <span><%=  current_user.first_name || current_user.name.capitalize %></span>
    <%= link_to destroy_user_session_path, :class => "navbar-wagon-item navbar-wagon-button btn", method: :delete do %>
      <i class="fa fa-sign-out"></i>
    <% end %>
    <% else %>
      <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-button btn" do %>
      <i class="fa fa-sign-in"></i> Connexion
    <% end %>
      <%= link_to new_user_registration_path, class: "navbar-wagon-item navbar-wagon-button btn" do %>
      <i class="fa fa-user-plus" aria-hidden="true"></i> Inscription
      <% end %>
    <% end %>

  </div>
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Accueil", root_path, class: "navbar-wagon-item navbar-wagon-button btn" %></li>
          <% if user_signed_in?%>
           <li><%= link_to "Mon profile", user_path(current_user), class: "navbar-wagon-item navbar-wagon-button btn" %></li>
           <li><%= link_to "Tableau de bord", pages_dashboard_path, :class => "navbar-wagon-item navbar-wagon-button btn" %></li>
           <li><%= link_to "Les pilotes", users_path, :class => "navbar-wagon-item navbar-wagon-button btn" %></li>
           <li><%= link_to "Tous les vols", search_ads_path, class: "navbar-wagon-item navbar-wagon-button btn" %></li>
           <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-button btn" %></li>
          <% else %>
          <li><%= link_to "Connexion", new_user_session_path, class: "navbar-wagon-item navbar-wagon-button btn" %></li>
          <li><%= link_to t(".top_call_to_action", default: "Inscription"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-button btn" %></li>
          <% end %>
      </ul>
    </div>
  </div>
</div>

