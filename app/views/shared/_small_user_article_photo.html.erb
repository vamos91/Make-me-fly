 <% if article.user.try(:picture?) %>
                          <%= cl_image_tag article.user.picture, class: "avatar" %>
                          <% elsif article.user.try(:facebook_picture_url?) %>
                            <%= image_tag article.user.facebook_picture_url.split("=")[0] << "=large", class: "avatar" %>
                          <% else %>
                            <%= image_tag "pilot.png", class: "avatar" %>
                        <% end %>
