 <% @reviews.each do |review| %>
 <% user = User.find(review.user_id) %>
    <div class="media" style="border-top: 1px solid lightgrey; padding: 15px; background-color: white">
      <div class="media-left">
          <% if current_page?(ad_path) %>
          <%= render 'shared/reviews_photo', user: user %>
           <p class="text-center"><%= link_to User.find(review.user_id).name, user_path(user) %></p>
          <% else %>
           <%= render 'shared/reviews_photo', user: user %>
           <p class="text-center"><%= link_to User.find(review.user_id).name, user_path(user) %></p>
          <% end %>
            </div>
            <div class="media-body" style="padding-left: 15px; border-left: 1px solid lightgrey">
              <h4 class="media-heading" style="font-size: 13px;">
               <%= render 'reviews/rating', stars: review.rating %>
              </h4>
              <p>Le <%= I18n.l(review.created_at, format: :short) %></p>
              <p style="font-size: 15px; color: gray;"><%= review.description %></p>
            </div>
          </div>
           <% end %>
      <% if current_page?(user_path) && current_user != @user %>
        <div class="media" style="border-top: 1px solid lightgrey; padding: 15px; background-color: white">
         <div class="media-left">
           <%= render 'shared/reviews_photo', user: current_user %>
           <p class="text-center"><%= current_user.name %></p>
            </div>
            <div class="media-body" style="padding-left: 15px; border-left: 1px solid lightgrey">
              <p style="font-size: 15px;">
                <%= render 'shared/small_user_profile_photo' %>
                <%= @user.name.capitalize %>  attend sa note ;)
                 <%= simple_form_for(@review) do |f| %>

              <h4 class="media-heading" style="padding: 20px; padding-top: 0; height: 50px;">
                 <%= f.input :rating, :collection => ["5 - Génial ! Moment d'exception, pilote sympathique et professionnel", "4 - Vol au top même si j'aurai aimer être mieux rassuré", "3 - L'ensemble de la prestation est correct avec des points à améliorer", "2 - L'expérience aurait pu être mieux, je ne suis pas satisfait", "1 - Mauvaise expérience"], :input_html => { :class => 'form-control'},label: false, prompt: "Donnez une note." %>
              </h4>
              <% f.input :rating, label: false, placeholder: "Donnez un note de 1 à 5" %>
              <%= f.hidden_field :reviewed_id, :value => user_id %>
              <div class="form-group-review" style="padding: 20px; padding-top: 0; height: 50px;">
              <%= f.input :description, label: false, placeholder: "Votre commentaire ",:input_html => {:rows => 10} %>
              </div>
              <%= f.button :submit, value: "Ajouter ce commentaire" %>
              <% end %>
                </p>
            </div>
          </div>
      <% end %>














