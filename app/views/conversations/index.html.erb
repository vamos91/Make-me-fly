<div class="wrapper-profile-dashboard top-spacing">
  <%= render 'shared/subnavbar' %>
  <div class="container">
  <div class="col-md-3 col-sm-3">
    <div class="row">
    <div class="thumbnail">
     <%= render "shared/user_profile_photo" %>
      <div class="caption text-center">
        <h4>Pilote <%= current_user.name %></h4>
          <p><%= link_to "Compléter mon profil", edit_user_path(current_user), :style=>'color: red; font-size: 12px;' %></p>
      </div>
     </div>
    </div>
    <div class="row">
       <div class="panel panel-default">
        <div class="panel-heading"><i class="fa fa-info-circle" aria-hidden="true"></i>
Informations non vérifiées</div>
         <div class="info-pilote">
          <p>Brevet de pilote   <i class="fa fa-times" aria-hidden="true"></i></p>
          <p>Assurance RC   <i class="fa fa-times" aria-hidden="true"></i></p>
          <p>Licence ULM   <i class="fa fa-times" aria-hidden="true"></i></p>
         </div>
      </div>
    </div>
    <div class="row">
       <div class="panel panel-default">
        <div class="panel-heading">J'ai proposé <%= policy_scope(Ad).count %> vol(s)</div>
         <div class="info-pilote">
          <p><%= link_to "Voir mes vols", ads_path, class: "btn btn-warning" %></p>
         </div>
      </div>
    </div>
    </div>
    <div class="col-md-9 col-sm-9">
    <div class="row">
    <% if @conversations.empty? %>
    <div class="wrapper">
      <div class="container text-center">
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <div class="empty-ad" style="background-color: white;">
            <div class="icon fa fa-smile-o"></div>
              <h1>Vos conversations s'afficheront ici</h1>
              <%= link_to "HOME", root_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% else %>
    <div class="panel panel-default margin-panel">
    <div class="panel-heading">Mes conversations</div>
    <div class="conversation-wrapper">
    <div>
      <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
          <% if conversation.sender_id == current_user.id %>
            <% recipient = User.find(conversation.recipient_id) %>
          <% else %>
            <% recipient = User.find(conversation.sender_id) %>
          <% end %>
          <div class="conversation">
          <div class="ad-data">
            <% if recipient.picture? %>
              <%= cl_image_tag recipient.picture, class: "img-circle", width: "80" %>
              <% elsif recipient.facebook_picture_url?%>
              <%= image_tag recipient.facebook_picture_url, class: "img-circle", width: "80" %>
              <% else %>
              <%= image_tag "pilot.png", class: "img-circle", width: "80" %>
            <% end %>
            <strong><%= link_to recipient.name.capitalize, conversation_messages_path(conversation)%></strong>
            <% if conversation.ad.nil? && conversation.ad.nil? %>
              <i class="fa fa-commenting-o"></i>
            <% else %>
             pour le vol du <%= I18n.l(conversation.ad.flight_date, format: :long) %> à <strong><%= conversation.ad.address%></strong>
            <i class="fa fa-commenting-o"></i>
          </div>
          <div class="price-conversation">
            <%= conversation.ad.price %>€
            <% end %>
          </div>
          </div>
        <% end %>
        <% end %>
        </div>
      </div>
      </div>
    <% end %>
    </div>
    </div>
  </div>
</div>
</div>




