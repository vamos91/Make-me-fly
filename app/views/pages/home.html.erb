            <div class="count"><%= @ads_counter %></div>
            <p>annonces</p>
          </div>
           <div class="col-xs-12 col-sm-4">
            <i class="fa fa-plane" aria-hidden="true"></i>
            <div class="count"><%= @pilote_counter %></div>
            <p>pilotes</p>
          </div>
           <div class="col-xs-12 col-sm-4">
            <i class="fa fa-users" aria-hidden="true"></i>
            <div class="count"><%= @passager_counter %></div>
            <p>ont déjà volés</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% else %>
  <div class="wrapper pilote-wrapper" style="padding: 55px; background-color: #3E92CC; height: 500px;">
  <p class="text-center">Des pilotes partagent leur passion. Venez les rencontrer !</p>
    <div class="container text-center">
      <div class="row">
          <% @users_pilote.each do |pilote| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
           <% if pilote.picture? %>
            <%= cl_image_tag pilote.picture,class: "img-circle", width: "180", height: "180" %>
            <% elsif pilote.facebook_picture_url? %>
              <%= image_tag pilote.facebook_picture_url.split("=")[0] << "=large", class: "img-circle", width: "180", height: "180" %>
            <% else %>
              <%= image_tag "pilot.png", class: "img-circle", width: "180", height: "180" %>
          <% end %>
          <h4><%= pilote.name || pilote.first_name %></h4>
           <h4>Inscrit le <%= pilote.message_time_user %></h4>
            </div>
         <% end %>
      </div>
    </div>
  </div>



<% end %>






