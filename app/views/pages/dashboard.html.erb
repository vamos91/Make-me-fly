              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel"><%= current_user.name || current_user.first_name %>, choisis ton camp !</h4>
                </div>
                <div class="modal-body text-center padded">
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="thumbnail pilote-modal">
                       <h3>Je suis pilote ULM</h3>
                     <%= link_to t(".top_call_to_action", default: "Je continue"), pages_dashboard_path(:pilote => true),class: "button-feature" %>
                  </div>
                    </div>
                    <div class="col-sm-6">
                    <div class="thumbnail passager-modal">
                      <h3>Je suis passager</h3>
                         <%= link_to t(".top_call_to_action", default: "Je continue"), pages_dashboard_path(:pilote => false), class: "button-feature" %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                </div>
              </div>
            </div>
          </div>
