<div class="panel panel-default">
  <div class="panel-body">
  <div class="form-inputs text-center">
    <div class="container">
    <div class="row">





              <div class="col-xs-12 col-md-6 col-md-offset-3">
               <div class="wrapper-registration">
                <h2 class = "text-center">Créez votre compte</h2>
                  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= f.error_notification %>
                  <div class="form-inputs">
                    <%= f.input :pilote, :as => :boolean, :label => false, :inline_label => true%>
                    <%= f.input :picture, label: "Votre photo" %>
                    <%= f.input :picture_cache, as: :hidden %>
                    <%= f.input :name, required: true, autofocus: true, placeholder: "Votre nom",label: false %>
                    <%= f.input :email, required: true, autofocus: true, placeholder: "Email",label: false %>
                    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Mot de passe", label: false%>
                    <%= f.input :password_confirmation, required: true, placeholder: "Confirmez votre mot de passe", label: false %>
                  </div>
                    <div class="form-actions class-center text-center">
                      <%= f.button :submit, "S'inscrire", class: "btn-primary" %>
                    </div>
                     <% end %>
                      <%= render "devise/shared/links" %>
                  </div>
              </div>

</div>

              <div class="col-xs-12 col-sm-4">
                <div class="card-look" >
                  <div class="card-name">Je suis pilote</div>
                  <div class="card-filter">
                    <%= image_tag "logo2.png", class: "size-image"  %>
                  </div>
                  <div class="card-hover hide">
                    <!--     <p>Je suis une super look qui déchire </p> -->
                    <p><span>Envolons nous !</span></p>
                  </div>
                  <div class="card-check <%= 'hide'%>">
                    <i class="fa fa-check"></i>
                  </div>
                  <input type="hidden" name="pilot" value="0"> <!-- recuperer la valeur et savoir ou elle est recuper pour etre sauver  dans la bd -->
                </div>
              </div>




    </div>
</div>


    </div>
  </div>







<% content_for :after_js do %>
    <script>
      $(function(){
        $('.card-look').click(function() {
          $(this).children(".card-check").toggleClass('hide');
          var el = $(this).children('input[type=hidden]');
          el.val(el.val() == 0 ? 1 : 0);
        });

        $(".card-look").on("mouseover", function() {
          $(this).children(".card-hover").removeClass('hide');
        })

        $(".card-look").on("mouseout", function() {
          $(this).children(".card-hover").addClass('hide');
        })

      });
    </script>
<% end  %>



