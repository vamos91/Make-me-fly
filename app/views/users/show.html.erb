<div class="wrapper-profile-dashboard">
  <div class="container">
  <div class="col-md-3">
    <div class="row">
    <div class="thumbnail">
      <%= image_tag "pilot.png"%>
      <div class="caption text-center">
        <h4><%= @user.name.capitalize %></h4>
        <p><%= link_to t(".top_call_to_action", default: "Envoyer un message") %></p>
        <% if current_user == @user %>
          <p><%= link_to "Tableau de bord", pages_dashboard_path, class: "btn btn-primary" %></p>
        <% end %>
      </div>
     </div>
    </div>
    <div class="row">
       <div class="panel panel-default">
        <div class="panel-heading">Informations non vérifiées</div>
         <div class="info-pilote">
          <p>Brevet de pilote   <i class="fa fa-times" aria-hidden="true"></i></p>
          <p>Assurance RC   <i class="fa fa-times" aria-hidden="true"></i></p>
          <p>Licence ULM   <i class="fa fa-times" aria-hidden="true"></i></p>
         </div>
      </div>
    </div>
    <div class="row">
       <div class="panel panel-default">
        <div class="panel-heading">Vols de <%= @user.name.capitalize %>: <%= @user_ads.count %></div>
         <div class="info-pilote">
          <p><%= link_to "Voir ses vols", user_ads_user_path(@user), class: "btn btn-warning" %></p>
         </div>
      </div>
    </div>
    <div class="row">
       <div class="panel panel-default">
       <div class="panel-heading">Expérience de vol</div>
        <p>Nombre de vol chez nous : </p>
      </div>
    </div>
    </div>
    <div class="col-md-9">
      <div class="panel-explication">
        <div class="row">
          <div class="id-user margin-panel">
           <h2>Bonjour, je suis <%= @user.name.capitalize %></h2>
           <p>Membre depuis <%= @user.message_time_user %></p>
           <p><%= @user.hometown.capitalize %></p>
          </div>
        </div>
        <div class="row">

          </div>
        </div>
        <div class="row">
        <div class="col-md-9">
          <div class="margin-panel">
              <% @articles.each do |article| %>
              <div class="panel panel-default">
                <div class="panel-heading titre-article"><strong><%= article.title.capitalize %></strong>
                  <div class="dropdown menu-article">
                      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
                        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                        <div class="button-article">
                          <li><%= link_to "Mettre à jour", edit_article_path(article) %>
</li>
                          <li><%= link_to "Effacer", article, method: :delete %></li>
                        </div>
                        </ul>
                    </div>
                </div>
                  <div class="article">
                    <div class="description"><p><%= article.description.capitalize %></p></div>
                    <% if article.video_url != nil %>
                    <% @v_url = article.video_url %>
                    <% @video_id = (/([\w-]{11})/.match(@v_url)).to_s %>
                    <% @embed_code = "<iframe width='570' height='360' src='http://www.youtube.com/embed/#{@video_id}' frameborder='0' allowfullscreen></iframe>" %>
                      <div class="video"><p><%= raw(@embed_code) %></p></div>
                    <% end %>
                    <div class="posted"><p>Posté le: <%= article.created_at %></p></div>
                  </div>
              </div>
              <% end %>
            </div>
          </div>
          <div class="col-md-3">
            <div class="margin-panel" id="map" style="width: 100%; height: 500px; pointer-events:none; border: 1px solid #dce0e0;">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>























